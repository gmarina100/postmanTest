		{
			"name": "Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "db7568d5-a591-4b08-8ed2-4ac9e8123ddb",
						"exec": [
							"pm.test(\"Validates it has a body\", function () { \r     pm.response.to.be.withBody; \r});\r\rpm.test(\"Validates that the body is json\", function () { \r     pm.response.to.be.json; \r});\r\rpm.test(\"Validates created status\", function(){\r    pm.response.to.have.status(201);\r});\r\rpm.test(\"Validates it has the property account_id\", function() {\r    var body = pm.response.json();\r    pm.expect(body.account).to.have.property('account_id');\r});\r\rpm.test(\"Validates name value\", function(){\r    var body = pm.response.json();\r    pm.expect(body.account.name).to.eq(pm.environment.get(\"email\"));\r});\r\r\r\rconsole.log(pm.response);\rconsole.log(pm.response.code);\rconsole.log(pm.response.status);\r\rpm.environment.set('account_id', pm.response.json().account.account_id)"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "155c5350-9b3b-4566-8bb0-6f6f9a88d0a7",
						"exec": [
							"function generateRandomString(length) {",
							"    var chars = 'abcdefghijklmnopqrstuvwxyz1234567890';",
							"    var string = '';",
							"    for(var ii=0; ii< length; ii++){",
							"        string += chars[Math.floor(Math.random() * chars.length)];",
							"    }",
							"    return string;",
							"}",
							"",
							"function createRandomUser () {",
							"    return 'agente' + generateRandomString(7) + '@ventas.com';",
							"}",
							"",
							"function createRandomPassword() {",
							"    return generateRandomString(7);",
							"}",
							"",
							"function registerAuthVariables(){",
							"    var user = createRandomUser();",
							"    var password = createRandomPassword();",
							"    var authString = user + ':' + password;",
							"    var encodedAuthString = btoa(authString);",
							"    console.log('using authString = ' + encodedAuthString);",
							"    pm.environment.set('authString', encodedAuthString);",
							"    console.log('using email = ' + user);",
							"    pm.environment.set('email', user);",
							"}",
							"",
							"registerAuthVariables();",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Basic {{authString}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"account\": {\n\t\t\"email\": \"{{email}}\"\n\t}\n}"
